<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<!-- DÃ©finition of the CONSOLE APPENDER -->
	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{HH:mm:ss} %5p %c{1}:%L - %m%n" />
		</layout>
	</appender>
	
	<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->
	<!-- 		LOGGER FOR UNIT TESTS						-->
	<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->
	<logger name="jUnit" additivity="false">
		<level value="debug" />
		<appender-ref ref="CONSOLE" />
	</logger>
		
	<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->
	<!-- 		LOGGER FOR THE PROJECT HS-DATA		  		-->
	<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->
	<!-- Definition des loggers pour le projet VLS-BORNES-CORE. -->
	<logger name="com.damnacon.javaMavenSpringPgSMix.hs.data.dao" additivity="false">
		<level value="debug" />
		<appender-ref ref="CONSOLE" />
	</logger>
	<logger name="com.damnacon.javaMavenSpringPgSMix.hs.data.service" additivity="false">
		<level value="debug" />
		<appender-ref ref="CONSOLE" />
	</logger>
	<logger name="com.damnacon.javaMavenSpringPgSMix.hs.data.controller" additivity="false">
		<level value="debug" />
		<appender-ref ref="CONSOLE" />
	</logger>
	<!-- Log at application level (very useful for production environnement) -->
	<!-- logger name="Inscription" additivity="false">
		<level value="info" />
		<appender-ref ref="CONSOLE" />
	</logger-->
	<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->
	<!-- LOGGER FOR FRAMEWORKS (ONLY IN ERROR CASES)		-->
	<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->
	<logger name="org.hibernate" additivity="false">
		<level value="error" />
		<appender-ref ref="CONSOLE" />
	</logger>
	<logger name="org.apache" additivity="false">
		<level value="error" />
		<appender-ref ref="CONSOLE" />
	</logger>
	<logger name="org.springframework" additivity="false">
		<level value="error" />
		<appender-ref ref="CONSOLE" />
	</logger>
	<logger name="org.synyx.hades.dao" additivity="false">
		<level value="error" />
		<appender-ref ref="CONSOLE" />
	</logger>
	
	<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->
	<!--               ROOT LOGGER                        	-->
	<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->
	<root>
		<level value="error" />
		<appender-ref ref="CONSOLE" />
	</root>
</log4j:configuration>
